	.noDisplay
		visibility hidden
	.guess_svg
		text
			font-family $sans
		rect.selection
			pointer-events none // prevents bars from being moved
		.axis
			text
				font-size 14px
				color #828282
			.tick text
				font-size 12px
			.axisTitle
				color #4F4F4F
				font-weight 700
		.axis--x
			line, path
				display none
		.axis--y
			path
				display none
			line
				stroke #E6E6E6
		.answerBar
			fill rgba(0, 0, 0, 0.5)
		.answerBarLabel
			font-size 14px
			color #828282
			text-anchor middle