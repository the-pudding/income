.guessMovement
	padding-bottom 16%
	img
		max-width 635px
		margin 7% auto 10%
	figure
		width 100%
		max-width 635px
		margin 0 auto
		.instruction_div
			max-width 635px
			margin 0 auto
			font-family $sans
			line-height 1.5rem
			display flex
			align-items center
			img
				width 36px
				height 36px
				margin 0
			.instruction
				line-height 1.2
				margin 0 0 1rem 10px
	.warningMsg
		visibility hidden
		max-width 635px
		width 100%
		background-color #FFFFE0
		font-family $sans
		font-size 0.8em
		line-height 2.78em
		text-align center
		margin 5% auto 2%
