.intro
	margin 0 auto
	padding 6rem 1rem 8rem 1rem

	&__hed
		max-width 731px
		margin 0 auto
		text-align center
		font-size 4rem
		font-family $serif-display
		line-height 4.3rem

	&__dek
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center

	&__bylineContainer
		margin 3rem 0 5rem

	&__byline
		max-width $column-width
		margin 0 auto
		// margin-top 1rem
		text-align center
		font-size 0.9rem
		font-family $sans
		color #000

	&__time
		display block
		max-width $column-width
		margin 1rem auto
		text-align center